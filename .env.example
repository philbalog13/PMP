# ==============================================
# Environment Variables - PMP Platform
# ==============================================
# ⚠️ This file contains sensitive credentials
# DO NOT commit to version control in production!
# For pedagogical use only.

# ==============================================
# DATABASE CREDENTIALS
# ==============================================
POSTGRES_DB=pmp_db
POSTGRES_USER=pmp_user
POSTGRES_PASSWORD=pmp_secure_pass_2024
POSTGRES_INITDB_ARGS=--encoding=UTF8 --locale=en_US.UTF-8
PGDATA=/var/lib/postgresql/data/pgdata

# ==============================================
# REDIS CREDENTIALS
# ==============================================
REDIS_PASSWORD=redis_pass_2024

# ==============================================
# PGADMIN CREDENTIALS
# ==============================================
PGADMIN_DEFAULT_EMAIL=admin@pmp.local
PGADMIN_DEFAULT_PASSWORD=pgadmin_pass_2024
PGADMIN_LISTEN_PORT=80

# ==============================================
# API GATEWAY
# ==============================================
NODE_ENV=development
JWT_SECRET=jwt_super_secret_key_2024_change_in_prod
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================
# MONITORING
# ==============================================
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=grafana_pass_2024
GF_INSTALL_PLUGINS=redis-datasource
GF_SERVER_ROOT_URL=http://localhost:3002

# ==============================================
# SECURITY ALGORITHMS
# ==============================================
PIN_ENCRYPTION_ALGORITHM=3DES
MAC_ALGORITHM=HMAC-SHA256

# ==============================================
# FRAUD DETECTION THRESHOLDS
# ==============================================
FRAUD_THRESHOLD_LOW=30
FRAUD_THRESHOLD_MEDIUM=60
FRAUD_THRESHOLD_HIGH=80

# ==============================================
# KEY MANAGEMENT
# ==============================================
KEY_ROTATION_INTERVAL_DAYS=90
LMK_KEY_FILE=/app/keys/lmk.key
MASTER_KEY_FILE=/app/keys/master.key

# ==============================================
# LOGGING
# ==============================================
LOG_LEVEL=debug

# ==============================================
# CONSTRUCTED URLS (internal)
# ==============================================
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379
