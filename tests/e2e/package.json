{
    "name": "pmp-e2e-tests",
    "version": "1.0.0",
    "description": "Suite de tests E2E pour PMP",
    "scripts": {
        "test": "node -e \"if (!process.env.RUN_E2E) { console.log('E2E tests skipped (set RUN_E2E=1 to run).'); process.exit(0); } require('child_process').execSync('jest --runInBand', { stdio: 'inherit' });\"",
        "test:health": "jest --testPathPattern=health",
        "test:cards": "jest --testPathPattern=cards",
        "test:transactions": "jest --testPathPattern=transactions",
        "test:workflow": "jest --testPathPattern=workflow",
        "test:all": "jest --runInBand --verbose"
    },
    "dependencies": {
        "axios": "^1.6.2",
        "dotenv": "^16.3.1"
    },
    "devDependencies": {
        "@playwright/test": "^1.58.2",
        "@types/jest": "^29.5.11",
        "@types/node": "^20.10.4",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.1",
        "typescript": "^5.3.3"
    }
}
