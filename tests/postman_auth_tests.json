            "name": "1. VUE CLIENT",
            "item": [
                {
                    "name": "Login Client",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test(\"Status code is 200\", function () {",
                                    "    pm.response.to.have.status(200);",
                                    "});",
                                    "",
                                    "var jsonData = pm.response.json();",
                                    "if (jsonData.token) {",
                                    "    pm.environment.set(\"client_token\", jsonData.token);",
                                    "    pm.test(\"Role is ROLE_CLIENT\", function () {",
                                    "        pm.expect(jsonData.user.role).to.eql(\"ROLE_CLIENT\");",
                                    "    });",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"client@pmp.edu\",\n    \"password\": \"pmp-password-2026\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/api/auth/client/login",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
