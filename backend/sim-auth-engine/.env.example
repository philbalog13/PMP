# ==============================================
# Sim-Auth-Engine Environment Configuration
# ==============================================

# Server
NODE_ENV=development
PORT=8006
HOST=0.0.0.0

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Redis (for session and caching)
REDIS_URL=redis://:redis_pass_2024@redis:6379
REDIS_PREFIX=auth-engine:

# Connected Services
CRYPTO_SERVICE_URL=http://crypto-service:8010
FRAUD_DETECTION_URL=http://sim-fraud-detection:8007

# Database
DATABASE_URL=postgresql://pmp_user:pmp_secure_pass_2024@postgres:5432/pmp_db

# Authorization Rules
DEFAULT_DAILY_LIMIT=5000
DEFAULT_SINGLE_TXN_LIMIT=2000
HIGH_RISK_THRESHOLD=1000
REQUIRE_3DS_ABOVE=500

# Timeouts (ms)
REQUEST_TIMEOUT=5000
RULE_EVALUATION_TIMEOUT=1000

# Metrics
METRICS_ENABLED=true
METRICS_PREFIX=sim_auth_engine
