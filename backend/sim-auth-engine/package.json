{
    "name": "sim-auth-engine",
    "version": "1.0.0",
    "description": "Moteur d'autorisation monétique avec règles configurables - PMP",
    "main": "dist/index.js",
    "scripts": {
        "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
        "build": "tsc -p tsconfig.build.json",
        "start": "node dist/index.js",
        "test": "jest --coverage",
        "test:watch": "jest --watch",
        "test:integration": "jest --config jest.integration.config.js",
        "lint": "tsc -p tsconfig.build.json --noEmit",
        "lint:fix": "eslint src/**/*.ts --fix",
        "format": "prettier --write src/**/*.ts",
        "clean": "rm -rf dist coverage",
        "docker:build": "docker build -t sim-auth-engine .",
        "docker:run": "docker run -p 8006:8006 sim-auth-engine"
    },
    "keywords": [
        "monetic",
        "authorization",
        "rules-engine",
        "payment",
        "pedagogical"
    ],
    "author": "PMP Team",
    "license": "MIT",
    "dependencies": {
        "express": "^4.18.2",
        "winston": "^3.11.0",
        "joi": "^17.11.0",
        "prom-client": "^15.1.0",
        "axios": "^1.6.2",
        "dotenv": "^16.3.1",
        "helmet": "^7.1.0",
        "cors": "^2.8.5",
        "compression": "^1.7.4",
        "express-rate-limit": "^7.1.5",
        "uuid": "^9.0.1",
        "ioredis": "^5.3.2",
        "dayjs": "^1.11.10"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/node": "^20.10.4",
        "@types/cors": "^2.8.17",
        "@types/compression": "^1.7.5",
        "@types/uuid": "^9.0.7",
        "@types/jest": "^29.5.11",
        "typescript": "^5.3.3",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.1",
        "eslint": "^8.56.0",
        "@typescript-eslint/eslint-plugin": "^6.14.0",
        "@typescript-eslint/parser": "^6.14.0",
        "prettier": "^3.1.1",
        "supertest": "^6.3.3",
        "@types/supertest": "^6.0.2"
    },
    "engines": {
        "node": ">=20.0.0"
    }
}
