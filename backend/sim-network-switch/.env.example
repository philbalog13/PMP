# ==============================================
# Sim-Network-Switch Environment Configuration
# ==============================================

# Server
NODE_ENV=development
PORT=8004
HOST=0.0.0.0

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Redis (for caching and rate limiting)
REDIS_URL=redis://:redis_pass_2024@redis:6379
REDIS_PREFIX=network-switch:

# Connected Services
ISSUER_SERVICE_URL=http://sim-issuer-service:8005
ACQUIRER_SERVICE_URL=http://sim-acquirer-service:8003

# Circuit Breaker
CIRCUIT_BREAKER_TIMEOUT=3000
CIRCUIT_BREAKER_ERROR_THRESHOLD=50
CIRCUIT_BREAKER_RESET_TIMEOUT=30000

# Retry Configuration
RETRY_MAX_ATTEMPTS=3
RETRY_INITIAL_DELAY=100
RETRY_MAX_DELAY=2000

# Metrics
METRICS_ENABLED=true
METRICS_PREFIX=sim_network_switch

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Timeout (ms)
REQUEST_TIMEOUT=5000
