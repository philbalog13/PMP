{
    "name": "sim-network-switch",
    "version": "1.0.0",
    "description": "Simulation du réseau de commutation monétique - Plateforme Monétique Pédagogique",
    "main": "dist/index.js",
    "scripts": {
        "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
        "build": "tsc -p tsconfig.build.json",
        "start": "node dist/index.js",
        "test": "jest --coverage",
        "test:watch": "jest --watch",
        "test:integration": "jest --config jest.integration.config.js",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "format": "prettier --write src/**/*.ts",
        "clean": "rm -rf dist coverage",
        "docker:build": "docker build -t sim-network-switch .",
        "docker:run": "docker run -p 8004:8004 sim-network-switch"
    },
    "keywords": [
        "monetic",
        "payment",
        "switch",
        "microservice",
        "pedagogical"
    ],
    "author": "PMP Team",
    "license": "MIT",
    "dependencies": {
        "axios": "^1.6.2",
        "axios-retry": "^4.0.0",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-rate-limit": "^7.1.5",
        "helmet": "^7.1.0",
        "ioredis": "^5.3.2",
        "joi": "^17.11.0",
        "opossum": "^8.1.3",
        "prom-client": "^15.1.0",
        "uuid": "^9.0.1",
        "winston": "^3.11.0",
        "jsonwebtoken": "^9.0.2"
    },
    "devDependencies": {
        "@types/compression": "^1.7.5",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^30.0.0",
        "@types/node": "^25.1.0",
        "@types/opossum": "^8.1.9",
        "@types/supertest": "^6.0.2",
        "@types/uuid": "^9.0.7",
        "@typescript-eslint/eslint-plugin": "^6.14.0",
        "@typescript-eslint/parser": "^6.14.0",
        "eslint": "^8.56.0",
        "jest": "^30.2.0",
        "prettier": "^3.1.1",
        "@types/jsonwebtoken": "^9.0.5",
        "supertest": "^6.3.3",
        "ts-jest": "^29.4.6",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.3.3"
    },
    "engines": {
        "node": ">=20.0.0"
    }
}