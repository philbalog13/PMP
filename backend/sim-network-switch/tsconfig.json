{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "lib": [
            "ES2022"
        ],
        "outDir": "./dist",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@models/*": [
                "src/models/*"
            ],
            "@services/*": [
                "src/services/*"
            ],
            "@controllers/*": [
                "src/controllers/*"
            ],
            "@routes/*": [
                "src/routes/*"
            ],
            "@middleware/*": [
                "src/middleware/*"
            ],
            "@utils/*": [
                "src/utils/*"
            ],
            "@config/*": [
                "src/config/*"
            ]
        },
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ],
        "types": [
            "jest",
            "node"
        ]
    },
    "include": [
        "src/**/*",
        "tests/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}